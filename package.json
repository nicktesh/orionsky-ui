{
  "name": "orionsky-ui",
  "version": "1.0.0",
  "description": "A modern, open-source UI library built with SCSS and CSS variables.",
  "main": "dist/orionsky.css",
  "scripts": {
    "build": "sass src/scss/orionsky.scss dist/orionsky.css --no-source-map",
    "watch": "sass --watch src/scss/orionsky.scss dist/orionsky.css",
    "minify": "postcss dist/orionsky.css -o dist/orionsky.min.css --use cssnano"
  },
  "author": "Nick Tesh",
  "license": "MIT",
  "devDependencies": {
    "cssnano": "^5.1.15",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "sass": "^1.65.1"
  }
}
